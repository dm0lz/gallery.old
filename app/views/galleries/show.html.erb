
<div class="container navbutton">
	<%= link_to 'Edit', edit_gallery_path(@gallery), :class => "button secondary" %> 
	<%= link_to 'Back', galleries_path, :class => "button secondary" %>
</div>

<div class="gallerie">


	<header class="row">
  		<h1 class="title small-6 small-centered columns"><%= @gallery.title %></h1>
  	</header>


	<div class="container">
		<ul class="large-block-grid-5" id="pictures">
			<% @gallery.pictures.each do |picture| %>
				<li>
					<%= picture.name %><%#= binding.pry %>
					<%= link_to(image_tag(picture.image_url(:standard)), picture.image_url(:large), :class => "th radius", :rel => "prettyPhoto[gallery]" ) %>
					<%= link_to 'Destroy', gallery_picture_path(@gallery, picture), method: :delete, data: { confirm: 'Are you sure?' } %>
				</li>
			<% end %>
		</ul>
	</div>


	<script id="template-upload" type="text/x-tmpl">
		<div class="upload">
			{%=o.name%}
			<div class="progress large-12 success round"><div class="meter" style="width: 0%"></div></div>
		</div>
	</script>


	<%= render "formPictures" %>

</div>

